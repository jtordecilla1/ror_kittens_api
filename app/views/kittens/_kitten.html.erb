<div id="<%= dom_id kitten %>" class="row">
  <div class="col-md-6 mb-3">
    <div class="list-group">
      <div class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">Name</h5>
        </div>
        <p class="mb-1 fs-4 text-primary"><%= kitten.name %></p>
      </div>
      <div class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">Age</h5>
        </div>
        <p class="mb-1 fs-4"><%= kitten.age %> <%= 'year'.pluralize(kitten.age) %> old</p>
      </div>
    </div>
  </div>
  
  <div class="col-md-6 mb-3">
    <div class="list-group">
      <div class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">Cuteness</h5>
        </div>
        <div class="progress mb-2" style="height: 25px;">
          <div class="progress-bar bg-success" role="progressbar" style="width: <%= kitten.cuteness * 10 %>%" 
               aria-valuenow="<%= kitten.cuteness %>" aria-valuemin="0" aria-valuemax="10">
            <%= kitten.cuteness %>/10
          </div>
        </div>
      </div>
      <div class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">Softness</h5>
        </div>
        <div class="progress mb-2" style="height: 25px;">
          <div class="progress-bar bg-info" role="progressbar" style="width: <%= kitten.softness * 10 %>%" 
               aria-valuenow="<%= kitten.softness %>" aria-valuemin="0" aria-valuemax="10">
            <%= kitten.softness %>/10
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
