<div class="card shadow-sm mb-4 mt-4">
  <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Kitten Details</h5>
    <span class="badge bg-light text-primary">ID: <%= @kitten.id %></span>
  </div>
  
  <% if @cat_image.present? %>
    <div class="text-center p-3">
      <img src="<%= @cat_image %>" alt="<%= @kitten.name %>" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;">
    </div>
  <% end %>
  
  <div class="card-body">
    <%= render @kitten %>
  </div>
  <div class="card-footer bg-light d-flex flex-wrap justify-content-between align-items-center gap-2">
    <%= link_to edit_kitten_path(@kitten), class: "btn btn-outline-primary" do %>
      <i class="bi bi-pencil"></i> Edit
    <% end %>
    <%= link_to kittens_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
    <%= button_to @kitten, method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to delete this kitten?" } do %>
      <i class="bi bi-trash"></i> Delete
    <% end %>
  </div>
</div>
